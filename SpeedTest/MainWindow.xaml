<Window x:Class="SpeedTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeedTest"
        mc:Ignorable="d"
        Title="Speed Test" Height="750" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Icon="C:\Users\Admin\source\repos\SpeedTest\SpeedTest\speedtest.ico"
        Background="#0A0E14">
    <Window.Resources>
        
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0A0E14"/>
        <SolidColorBrush x:Key="CardBrush" Color="#131820"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#1E2832"/>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#00D4FF"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#33DDFF"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#E8EDF3"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#6B7480"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#00D4FF"/>
        <SolidColorBrush x:Key="DownloadBrush" Color="#00D4FF"/>
        <SolidColorBrush x:Key="UploadBrush" Color="#00FF88"/>
        <SolidColorBrush x:Key="PingBrush" Color="#FF6B9D"/>
        
        
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="#0A0E14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="40,18"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="ScaleTransform"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1.05" Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1.05" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1.0" Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1.0" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#1E2832"/>
                    <Setter Property="Foreground" Value="#4A5560"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="InfoCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
       
        <Border Grid.Row="0" Background="{StaticResource BackgroundBrush}" Padding="0,25,0,25">
            <TextBlock Text="Speed Test" 
                       FontSize="36" 
                       FontWeight="Light"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       HorizontalAlignment="Center"
                       FontFamily="Segoe UI"/>
        </Border>
        
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,0,40,20">
                
                <Border Style="{StaticResource InfoCard}" 
                        Margin="0,30,0,30"
                        VerticalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                  
                    <TextBlock Grid.Row="0" 
                               Text="Скорость загрузки" 
                               FontSize="16" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,40"
                               FontWeight="Light"/>
                    
                    
                    <Grid Grid.Row="1" Margin="0,0,0,60">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                      
                        <Canvas Grid.Row="1" Height="80" Margin="20,30,20,30" Name="SpeedBarCanvas" Width="800">
                            
                            <Rectangle Name="SpeedBarBackground" 
                                       Fill="{StaticResource BorderBrush}" 
                                       Opacity="0.3"
                                       Height="12"
                                       Canvas.Left="0"
                                       Canvas.Top="34"
                                       Width="800"
                                       RadiusX="6"
                                       RadiusY="6"/>
                            
                            
                            <Rectangle Name="SpeedBarActive" 
                                       Fill="{StaticResource DownloadBrush}" 
                                       Height="12"
                                       Canvas.Left="0"
                                       Canvas.Top="34"
                                       Width="0"
                                       RadiusX="6"
                                       RadiusY="6"/>
                            
                          
                            <Line X1="0" Y1="28" X2="0" Y2="46" 
                                  Stroke="{StaticResource TextSecondaryBrush}" 
                                  StrokeThickness="2"
                                  Opacity="0.5"/>
                            <TextBlock Text="0" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Canvas.Left="-8"
                                       Canvas.Top="6"
                                       FontWeight="Light"/>
                            
                            
                            <Line x:Name="Mark100" X1="80" Y1="26" X2="80" Y2="48" 
                                  Stroke="{StaticResource TextSecondaryBrush}" 
                                  StrokeThickness="2.5"
                                  Opacity="0.7"/>
                            <TextBlock x:Name="Text100" 
                                       Text="100" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Canvas.Left="72"
                                       Canvas.Top="6"
                                       FontWeight="SemiBold"/>
                            
                         
                            <Line x:Name="Mark250" X1="200" Y1="28" X2="200" Y2="46" 
                                  Stroke="{StaticResource TextSecondaryBrush}" 
                                  StrokeThickness="2"
                                  Opacity="0.5"/>
                            <TextBlock x:Name="Text250" 
                                       Text="250" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Canvas.Left="192"
                                       Canvas.Top="6"
                                       FontWeight="Light"/>
                            
                           
                            <Line x:Name="Mark500" X1="400" Y1="26" X2="400" Y2="48" 
                                  Stroke="{StaticResource TextSecondaryBrush}" 
                                  StrokeThickness="2.5"
                                  Opacity="0.7"/>
                            <TextBlock x:Name="Text500" 
                                       Text="500" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Canvas.Left="392"
                                       Canvas.Top="6"
                                       FontWeight="SemiBold"/>
                            
                            
                            <Line x:Name="Mark750" X1="600" Y1="28" X2="600" Y2="46" 
                                  Stroke="{StaticResource TextSecondaryBrush}" 
                                  StrokeThickness="2"
                                  Opacity="0.5"/>
                            <TextBlock x:Name="Text750" 
                                       Text="750" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Canvas.Left="592"
                                       Canvas.Top="6"
                                       FontWeight="Light"/>
                            
                            
                            <Line x:Name="Mark1000" X1="800" Y1="28" X2="800" Y2="46" 
                                  Stroke="{StaticResource TextSecondaryBrush}" 
                                  StrokeThickness="2"
                                  Opacity="0.5"/>
                            <TextBlock x:Name="Text1000" 
                                       Text="1000" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Canvas.Left="782"
                                       Canvas.Top="6"
                                       FontWeight="Light"/>
                        </Canvas>
                        
                       
                        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,20,0,0">
                            <TextBlock Name="SpeedText" 
                                       Text="0" 
                                       FontSize="64" 
                                       FontWeight="Light"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontFamily="Segoe UI"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Мбит/с" 
                                       FontSize="14" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontWeight="Light"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                    
                    
                    <TextBlock Grid.Row="3" 
                               Name="StatusText"
                               Text="Готов к тесту" 
                               FontSize="14" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"/>
                    </Grid>
                </Border>
                
              
                <UniformGrid Columns="3" Margin="0,0,0,30">
                    
                    <Border Style="{StaticResource InfoCard}" Margin="0,0,12,0">
                        <StackPanel>
                            <TextBlock Text="ВХОДЯЩАЯ" 
                                       FontSize="11" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,12"
                                       FontWeight="SemiBold"/>
                            <TextBlock Name="DownloadText" 
                                       Text="0.00 Мбит/с" 
                                       FontSize="28" 
                                       FontWeight="Light"
                                       Foreground="{StaticResource DownloadBrush}"
                                       FontFamily="Segoe UI"/>
                        </StackPanel>
                    </Border>
                    
                    
                    <Border Style="{StaticResource InfoCard}" Margin="6,0,6,0">
                        <StackPanel>
                            <TextBlock Text="ИСХОДЯЩАЯ" 
                                       FontSize="11" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,12"
                                       FontWeight="SemiBold"/>
                            <TextBlock Name="UploadText" 
                                       Text="0.00 Мбит/с" 
                                       FontSize="28" 
                                       FontWeight="Light"
                                       Foreground="{StaticResource UploadBrush}"
                                       FontFamily="Segoe UI"/>
                        </StackPanel>
                    </Border>
                    
                   
                    <Border Style="{StaticResource InfoCard}" Margin="12,0,0,0">
                        <StackPanel>
                            <TextBlock Text="ЗАДЕРЖКА" 
                                       FontSize="11" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,12"
                                       FontWeight="SemiBold"/>
                            <TextBlock Name="PingText" 
                                       Text="0 мс" 
                                       FontSize="28" 
                                       FontWeight="Light"
                                       Foreground="{StaticResource PingBrush}"
                                       FontFamily="Segoe UI"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
                
              
                <Border Style="{StaticResource InfoCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="IP АДРЕС" 
                                       FontSize="11" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,12"
                                       FontWeight="SemiBold"/>
                            <TextBlock Name="IpText" 
                                       Text="Загрузка..." 
                                       FontSize="17" 
                                       FontWeight="Light"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontFamily="Segoe UI"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="ПРОВАЙДЕР" 
                                       FontSize="11" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,12"
                                       FontWeight="SemiBold"/>
                            <TextBlock Name="IspText" 
                                       Text="Загрузка..." 
                                       FontSize="17" 
                                       FontWeight="Light"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontFamily="Segoe UI"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="СТРАНА" 
                                       FontSize="11" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,12"
                                       FontWeight="SemiBold"/>
                            <TextBlock Name="CountryText" 
                                       Text="Загрузка..." 
                                       FontSize="17" 
                                       FontWeight="Light"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontFamily="Segoe UI"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
       
        <Border Grid.Row="2" 
                Background="{StaticResource BackgroundBrush}" 
                Padding="0,30,0,35">
            <Button Name="StartButton" 
                    Content="Начать тест скорости" 
                    Style="{StaticResource ModernButton}"
                    HorizontalAlignment="Center"
                    Click="StartButton_Click"/>
        </Border>
    </Grid>
</Window>
